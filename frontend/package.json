{
  "name": "simulador-fiob-frontend",
  "version": "1.0.0",
  "description": "Frontend do Simulador Fio B - Canal Solar",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:ssr",
    "build:embed": "tsc && vite build && node scripts/build-embed.js",
    "build:client": "tsc && vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:ssr": "npm run build:client && npm run build:server",
    "preview": "vite preview",
    "start": "node server.mjs"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-gtm-module": "^2.0.11",
    "react-helmet-async": "^2.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-gtm-module": "^2.0.4",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^6.4.1"
  }
}
